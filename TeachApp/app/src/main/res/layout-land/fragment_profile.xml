<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#E1DDDDE6"
        tools:ignore="UselessParent">



    <!-- TODO: Update blank fragment layout -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="20dp"
            android:background="#fff"
            android:padding="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp">

            <ImageView
                android:id="@+id/imageProfile"
                android:layout_width="348dp"
                android:layout_height="264dp"
                android:layout_centerInParent="true"
                android:background="@android:color/background_light"
                app:srcCompat="@drawable/study" />

            <TextView
                android:id="@+id/scoreProfile"
                android:layout_width="133dp"
                android:layout_height="wrap_content"
                android:drawableEnd="@android:drawable/btn_star_big_off"
                android:drawableRight="@android:drawable/btn_star_big_on"
                android:gravity="center_horizontal"
                android:padding="15sp"
                android:text="@string/level"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="36sp"
                android:textStyle="bold"
                app:fontFamily="@font/dosis_medium" />

            <TextView
                android:id="@+id/areasProfile"
                android:layout_width="150dp"
                android:layout_height="176dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                android:padding="10dp"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                app:fontFamily="@font/dosis_medium" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="3dp"
            android:background="#fff"
            android:padding="@dimen/activity_vertical_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nomProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/nomProfile"
                android:textSize="36sp"
                android:textStyle="bold"
                app:fontFamily="@font/architects_daughter" />

            <TextView
                android:id="@+id/emailProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/emailProfile"
                android:textSize="22sp"
                app:fontFamily="@font/dosis_medium" />

            <TextView
                android:id="@+id/cityProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/ciuProfile"
                android:textSize="22sp"
                app:fontFamily="@font/dosis_medium" />

            <TextView
                android:id="@+id/universityProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/uniProfile"
                android:textSize="22sp"
                app:fontFamily="@font/dosis_medium" />

            <TextView
                android:id="@+id/numberTutProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/numProfile"
                android:textSize="22sp"
                android:textStyle="italic"
                app:fontFamily="@font/dosis_medium" />

            <Button
                android:id="@+id/btnRequest"
               style="@style/btnBlue"
                android:text="@string/solProfile"
                android:layout_marginTop="20dp">

            </Button>

        </LinearLayout>

    </LinearLayout>

    </ScrollView>
</FrameLayout>