<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".RequestActivity">

    <!-- Login progress -->
    <ProgressBar
        android:id="@+id/request_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/request_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/h1"
                android:text="Request Tutorial"
                android:textSize="40sp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                ></TextView>

            <com.example.comboboxtest.ComboBox
                style="?android:attr/spinnerStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                >

                <TextView
                    android:id="@+id/subject"
                    style="?android:attr/spinnerItemStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:text="Select a Subject..."
                    android:textAlignment="inherit"
                    />

                <TextView
                    android:id="@+id/request_subject"
                    style="?android:attr/spinnerItemStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:text="Subject 1"
                    android:textAlignment="inherit"
                    />

            </com.example.comboboxtest.ComboBox>

               <AutoCompleteTextView
                    android:id="@+id/request_topic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Specific topic"
                    android:inputType="text"
                    android:maxLines="1"
                    android:singleLine="true"
                   android:layout_marginHorizontal="30dp"/>

            <com.example.comboboxtest.ComboBox
                style="?android:attr/spinnerStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                >

                <TextView
                    android:id="@+id/offering"
                    style="?android:attr/spinnerItemStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:text="Indicate your offering..."
                    android:textAlignment="inherit"
                    />

                <TextView
                    android:id="@+id/request_offering"
                    style="?android:attr/spinnerItemStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:text=">Offering 1"
                    android:textAlignment="inherit"
                    />

            </com.example.comboboxtest.ComboBox>



            <EditText
                android:id="@+id/request_dateStart"
                style="@style/input"
                android:inputType="date"
                android:hint="@string/format_date"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="32dp"
                android:layout_marginHorizontal="30dp"/>

            <EditText
                android:id="@+id/request_dateEnd"
                style="@style/input"
                android:inputType="date"
                android:hint="@string/format_date"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="30dp"
                />

            <EditText
                android:id="@+id/request_timeInit"
                style="@style/input"
                android:inputType="time"
                android:hint="@string/format_hour"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="30dp"/>

            <EditText
                android:id="@+id/request_timeEnd"
                style="@style/input"
                android:inputType="time"
                android:hint="@string/format_hour"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginBottom="32dp"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/email_sign_in_button"
                    style="@style/btnBlue"
                    android:text="Cancelar"
                    android:textStyle="bold"
                    android:layout_width="180dp"
                    android:background="@drawable/btn"
                    android:textColor="@color/blue_500"
                    android:layout_marginHorizontal="10dp"/>

                <Button
                    android:id="@+id/request_tutorial"
                    style="@style/btnBlue"
                    android:text="Send Request"
                    android:textColor="@android:color/background_light"
                    android:layout_width="180dp"
                    android:layout_marginHorizontal="0dp" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>