<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#E1DDDDE6">



    <!-- TODO: Update blank fragment layout -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="20dp"
            android:background="#fff"
            android:padding="@dimen/activity_horizontal_margin">

            <ImageView
                android:id="@+id/imageProfile"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:background="@android:color/background_light"
                android:src="@mipmap/student"/>

            <TextView
                android:id="@+id/start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:drawableRight="@android:drawable/btn_star_big_on"
                android:text="@string/level"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="@android:color/holo_orange_light"
                android:drawableEnd="@android:drawable/btn_star_big_on"
                android:padding="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:text="@string/skills"
                android:textStyle="bold|italic"
                android:textSize="23sp"
                android:layout_below="@+id/start"
                android:layout_marginTop="130dp"
                android:padding="10dp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="3dp"
            android:background="#fff"
            android:padding="@dimen/activity_vertical_margin"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/nomProfile"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:text="@string/nomProfile"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btnCalificar"
                    android:textStyle="italic"
                    android:drawableLeft="@android:drawable/star_off"
                    android:layout_toRightOf="@+id/nomProfile"
                    android:drawableStart="@android:drawable/star_off"
                    android:layout_toEndOf="@+id/nomProfile"
                    android:textColor="@color/colorPrimary"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:padding="5dp"
                android:textStyle="italic"
                android:text="@string/emailProfile"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:padding="5dp"
                android:textStyle="italic"
                android:text="@string/ciuProfile"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:padding="5dp"
                android:textStyle="italic"
                android:text="@string/uniProfile"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:padding="5dp"
                android:textStyle="italic"
                android:text="@string/numProfile"
                android:textAlignment="textEnd"
                android:gravity="end" />

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@android:color/holo_blue_dark"
                android:text="@string/solProfile"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:textColor="#fff"
                android:drawableLeft="@android:drawable/presence_online"
                android:drawableStart="@android:drawable/presence_online">

        </LinearLayout>

    </LinearLayout>

</FrameLayout>