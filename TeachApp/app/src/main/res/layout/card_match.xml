<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="3dp"
        android:gravity="center"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_match"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_margin"
            android:elevation="3dp"
            card_view:cardCornerRadius="@dimen/card_category_radius">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/icon_user_M"
                        android:layout_width="@dimen/match_cover_height"
                        android:layout_height="@dimen/match_cover_height"
                        android:layout_margin="3dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:scaleType="fitXY" />

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/text_name_user_M"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textSize="@dimen/category_title"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/match_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:drawableRight="@android:drawable/btn_star_big_on"
                            android:textColor="@android:color/holo_orange_light"
                            android:drawableEnd="@android:drawable/btn_star_big_on"
                            android:padding="3dp"
                            android:layout_weight="4"/>
                    </LinearLayout>


                    <TextView
                        android:id="@+id/text_university_user_M"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/info_count" />

                    <TextView
                        android:id="@+id/text_email_user_M"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/info_count" />

                    <TextView
                        android:id="@+id/text_phone_user_M"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/info_count" />

                    <TextView
                        android:id="@+id/text_areas_user_M"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/info_count" />

                    <Button
                        android:id="@+id/button_match_request"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:background="@android:color/holo_blue_dark"
                        android:text="@string/solProfile"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginTop="5dp"
                        android:padding="3dp"
                        android:textColor="#fff"
                        android:drawableLeft="@android:drawable/presence_online"
                        android:drawableStart="@android:drawable/presence_online"/>

                </LinearLayout>


            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</RelativeLayout>